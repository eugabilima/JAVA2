			nome = tec.nextLine();
			
	} else if(sexo == 2){
		System.out.println("Ola " + nome + " seu sexo e masculino");
		nome = tec.nextLine();

	}
	else{
		System.out.println("Nao temos essa opcao");
	}
	
	System.out.println("Digite 1 para Casada(o), Digite 2 para Solteira(o)");
