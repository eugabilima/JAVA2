System.out.println("Insira o valor de 1");
int v1 = tec.nextInt();	      
System.out.println("Insira o valor de 2");
int v2 = tec.nextInt();	      
if (v1 == v2) {
int v3 = v1+v2;
System.out.println("o valor 3 e: " +v3);
} else {
int v3 = v1*v2;
System.out.println("o valor 3 e: " +v3);
}}}

3)---------------------------------------------------------------------------------------------------------------
System.out.println("Qual seu peso");
double peso = tec.nextDouble();
System.out.println("Qual sua altura");
double altura = tec.nextDouble();
     
double imc = peso/(altura*altura);
    
if (imc < 18.5) {
System.out.println("Você está abaixo do peso");
}if ((imc > 18.5) && (imc <= 25)) {
System.out.println("Você está no peso normal");
}if ((imc > 25) && (imc <= 30)) {
System.out.println("Você está acima do peso");
}if (imc > 30) {
System.out.println("Você está obeso");
}}}
