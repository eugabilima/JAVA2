CLIENTE---------------------------------------------------------------------------------------------------------------------------------------------
package Main;
import java.util.Scanner;
public class Cliente {
	
	private String nome;
	private String email;
	private String endereco;
	private String telefone;
	private String cpf;
	private String cnpj;
	private String rzsoci;
	


	public void Cli() {
	Scanner tec = new Scanner(System.in);
	
	System.out.println("CADASTRO CLIENTE"); 
	
	System.out.println("insira seu nome: ");
	String nome = tec.nextLine();
	System.out.println("insira sua email: ");
	String email = tec.next();
	System.out.println("insira sua endereço: ");
	String endereco = tec.next();
	System.out.println("insira seu telefone: ");
	String telefone = tec.next();
	System.out.println("insira seu CPF: ");
	String cpf = tec.nextLine();
	System.out.println("insira seu CNPJ: ");
	String cnpj = tec.next();
	System.out.println("insira sua razão social: ");
	String rzsoci = tec.next();	

	
	}
}
