package Main;
import java.util.Scanner;
public class funcionario {

    private String nomef;
	private String email;
	private String endereco;
	private String cargo;
	private String salario;
	private String telefone;
	private String cpff;
	
	public void fun() {
		Scanner tec = new Scanner(System.in);

		System.out.println("CADASTRO FUNCIONARIO"); 
		
		System.out.println("insira seu nome: ");
		this.nomef = tec.nextLine();
		System.out.println("insira seu email: ");
		String email = tec.next();
		System.out.println("insira seu CPF: ");
		this.cpff = tec.nextLine();
		System.out.println("insira seu endereço: ");
		String endere = tec.next();
		System.out.println("insira seu cargo: ");
		String cargo = tec.next();
		System.out.println("insira seu salario: ");
		String salario = tec.next();
		System.out.println("insira seu folga: ");
		String folga = tec.next();
	
		valores text1 = new valores();
		text1.val(this.cpff, this.nomef, this.salario);
		
	}
}
